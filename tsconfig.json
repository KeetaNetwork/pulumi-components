{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["es2017"],
		"rootDir": "./src",
		"moduleResolution": "node",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"declaration": true,
		"outDir": "dist",
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [ "dist", "dist/**" ]
}
